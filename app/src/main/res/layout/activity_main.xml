<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choi.tour.MainActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_userinfo"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="LogIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_userinfo"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/btn_travel_expense"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:srcCompat="@drawable/user_img"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_travelRoute"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="144dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.875" />

    <ImageButton
        android:id="@+id/btn_travel_expense"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_userinfo"
        app:srcCompat="@drawable/plane_img"
        android:layout_marginRight="132dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.878" />

    <ImageButton
        android:id="@+id/btn_travelRoute"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/btn_travel_expense"
        android:layout_alignRight="@+id/btn_travel_expense"
        android:layout_below="@+id/btn_login"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_travel_expense"
        app:srcCompat="@drawable/route_img"
        android:layout_marginRight="144dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.875" />

</android.support.constraint.ConstraintLayout>
